{
    "manifest_version": 3,
    "name": "AI Text Assistant",
    "version": "1.0",
    "description": "Process selected text with AI assistance",
    "permissions": ["activeTab"],
    "host_permissions": ["https://api.openai.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {}
}